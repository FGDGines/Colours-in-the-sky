  "devDependencies": {
    "standard": "17.0.0"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "ignorePatterns": [
      "front/node_modules",
      "front/build",
      "back/node_modules"
